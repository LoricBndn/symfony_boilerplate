{% extends 'base.html.twig' %}

{% block title %}Nos Burgers - CRUDcroustillant{% endblock %}

{% block body %}
    <main>
        <h2>Liste des burgers</h2>
        <ul class="burger-list">
            {% for id, burger in burgers %}
                <li>
                    <a href="{{ path('burger_show', {id: id}) }}">
                        {{ burger.nom }} - {{ burger.prix }} €
                    </a>
                </li>
            {% else %}
                <li>Aucun burger trouvé.</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
