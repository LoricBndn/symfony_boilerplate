{% extends 'base.html.twig' %}

{% block title %}Liste des Oignons{% endblock %}

{% block body %}
<main class="page-container content">
    <h2>Liste des Oignons</h2>

    {% if oignons|length > 0 %}
        <div class="cards-container">
            {% for oignon in oignons %}
                <div class="card">
                    <div class="card-info">
                        <h3>{{ oignon.name }}</h3>
                        <p>ID : {{ oignon.id }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun oignon trouv√©.</p>
    {% endif %}
</main>
{% endblock %}
