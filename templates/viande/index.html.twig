{% extends 'base.html.twig' %}

{% block title %}Liste des Viandes{% endblock %}

{% block body %}
<main class="page-container content">
    <h2>Liste des Viandes</h2>

    {% if viandes|length > 0 %}
        <div class="cards-container">
            {% for viande in viandes %}
                <div class="card">
                    <div class="card-info">
                        <h3>{{ viande.name }}</h3>
                        <p>ID : {{ viande.id }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucune viande trouv√©e.</p>
    {% endif %}
</main>
{% endblock %}
