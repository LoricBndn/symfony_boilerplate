{% extends 'base.html.twig' %}

{% block title %}
    {% if burger %}
        Burger {{ burger.nom }}
    {% else %}
        Burger introuvable
    {% endif %}
{% endblock %}

{% block body %}
    <main class="burger-detail">
        {% if burger %}
            <h2>{{ burger.nom }}</h2>
            <p><strong>Description :</strong> {{ burger.description }}</p>
            <p><strong>Prix :</strong> {{ burger.prix }} €</p>
            <a href="{{ path('burgers_list') }}">← Retour à la liste</a>
        {% else %}
            <h2>Oups ! Burger introuvable</h2>
            <p>Le burger avec l’ID {{ id }} n’existe pas.</p>
            <a href="{{ path('burgers_list') }}">← Retour à la liste des burgers</a>
        {% endif %}
    </main>
{% endblock %}
